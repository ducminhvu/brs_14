<br>
<%= search_form_for @q, class: "form-inline" do |f| %>
  <%= f.search_field :title_cont, placeholder: "Title", class: "form-control search"  %>
  <%= f.label :category_id, class: "search" %>
  <%= f.select :category_id_eq, options_from_collection_for_select(@categories, :id, :name,
    (params[:query][:category_id_eq] unless params[:query].nil?)), {}, class: "form-control search" %>
  <% if signed_in? %>
    <%= f.label :favorite, class: "search" %>
    <%= check_box_tag :favorites, {}, params[:favorites].present?, {class: "form-control inline search"} %>
  <% end %>
  <%= f.label :rating, class: "search" %>
  <div class="star-rating-filter inline search"></div>
  <%= f.submit t("search"), class: "btn btn-default button-width search" %>
<% end %>
<div class="row">

  <p id="notice"><%= notice %></p>
  <br><br>
  <%= render @books %>
  <h1><%= t("not-found-book") if @books.blank? %></h1>
</div>
<%= will_paginate %>
