<%= form_for [current_user, @request] do |f| %>
  <div class="form-group">
    <%= f.label :book_name %>
    <%= f.text_field :book_name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id  %>
  <%= f.submit t(".send"), class: "btn btn-primary submit-button" %>
  <%= link_to t(".close"), "", "data-dismiss" => "modal",
    class: "btn btn-default" %>
<% end %>
