<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render "shared/user" %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <%= render "shared/user" %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <ul class="users follow">
      <%= render "users/follow_form" if logged_in? %>
    </ul>
  <%= will_paginate @users %>
  </div>
</div>
